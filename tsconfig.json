{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,

    /* Linting */
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
  }
}
