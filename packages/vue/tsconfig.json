{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@vue/tsconfig/tsconfig.lib.json"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
